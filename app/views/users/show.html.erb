   <div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %> <br>
        <%= @user.name %><br>
        <%= @user.email if current_user == @user %> <br>
 <%= @user.location %> <br>
  <%= link_to "edit" , edit_user_path(@user) if current_user == @user %><br>
  Follower: <%= @followers.count %> Following: <%= @following.count %></h1>
  
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
   <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>